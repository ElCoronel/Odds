ansible $1 -T 20 -m command -a "hostname" | grep -v Error | grep -v Fail | sed 'N;s/\n/ /' | cut -d " " -s -f1,3,7 | grep -v } | grep -v to | sed -e s/" "/'\t\t'/g | sed 's/UNREACHABLE!/########## UNREACHABLE! ##########/g' | sed -e "s/########## UNREACHABLE! ##########/\x1b[31m########## UNREACHABLE! ##########\x1b[0m/g" | sed 's/SUCCESS\t\t//g'
