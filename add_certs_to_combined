for i in `cat cert.list`; do echo -e "\n" >> /etc/httpd/certs/alldodcerts.pem.04112019; openssl x509 -in $i -noout -text| grep Subject: | sed -e 's/Subject\: /subject\=/' | sed -e 's/, /\//g' | sed -e 's/        //' >> /etc/httpd/certs/alldodcerts.pem.04112019; openssl x509 -in $i -noout -text| grep Issuer: | sed -e 's/Issuer\: /issuer\=/' | sed -e 's/, /\//g' | sed -e 's/        //' >> /etc/httpd/certs/alldodcerts.pem.04112019; cat $i >> /etc/httpd/certs/alldodcerts.pem.04112019; done
